#include <iostream>
#include <string>

using namespace std;

int main()
{
    int tache; //les noms des taches
    cout << "Veuillez saisir un numero de tache entre 1 et 8"<<endl;
    cin >> tache;
    switch(tache)
    {
        case 1 : cout<<"renommer une tache"<<endl;
            break;
        case 2 : cout<<"dupliquer une tache"<<endl;
            break;
        case 3 : cout<<"modifier les chemins des taches"<<endl;
            break;
        case 4 : cout<<"afficher le chemin de la tache"<<endl;
            break;
        case 5 : cout<<"creer une execution retardee"<<endl;
            break;
        case 6 : cout<<"modifier l'intervalle de temps entre deux cycles"<<endl;
            break;
        case 7 : cout<<"selectionnez le nombre de cycle"<<endl;
            break;
        case 8 : cout<<"executez la tache immediatement"<<endl;
            break;
        default : cout<<"saisir une tache entre 1 et 8"<<endl;

    }
    return 0;
}

