        cout <<"Souhaitez vous ajoutez la tache"<<endl;
        cout <<"Veuillez saisir un entier entre 1 et 4"<<endl;
        cin >> var0;
        if (var0 == 1)
        {

            renommerTache("Clicks Interval"); // on renomme la tache en parametre
            cout<<renommerTache("Clicks Interval")<<endl; // on l'affiche
        }
        else if (var0 == 2)
        {
            supprimerTache("Clicks Interval"); // on supprime la tache passe en parametre
        }
        else if (var0==3)
        {
            string a=dupliquerTache("Click interval",3);
            cout << dupliquerTache("Click interval",3)<<endl;

        }
        else if (var0 == 4){
            ajouterTache("Click Interval");
            cout <<ajouterTache("Click Interval")<<endl;

        }
        break;
        case 1: cout <<"Click Options"<<endl; // tache 2
        break;
        case 2 : cout <<"Click Repeat"<<endl; // tache 3
        break;
        case 3 : cout <<"Cursor Position"<<endl; // tache 4
        break;
        case 4 : cout <<"Autre options"<<endl; // tache 5
        break;
        default : cout <<"saisir un chiffre entre 1 et 4"<<endl;


    }

   // enchainer_clic(10,3,10);
    /* =================================================================================
